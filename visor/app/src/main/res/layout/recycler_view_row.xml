<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/tarjeta"
            android:layout_width="match_parent"
            android:background="@color/cardview_light_background"
            android:layout_margin="10px"
            android:elevation="8dp"
            android:layout_height="100dp">

            <TextView
                android:id="@+id/tituloEscena"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="@+id/tarjeta"
                app:layout_constraintTop_toTopOf="@+id/tarjeta"
                app:layout_constraintBottom_toBottomOf="@id/tarjeta"
                app:layout_constraintStart_toStartOf="@id/tarjeta"
                app:layout_constraintVertical_bias="0.1"
                app:layout_constraintHorizontal_bias="0.1"
                android:textSize="30dp"
                android:text="Titulo de Escena" />

            <TextView
                android:id="@+id/tipoEscena"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                app:layout_constraintTop_toTopOf="@+id/tarjeta"
                app:layout_constraintBottom_toBottomOf="@id/tarjeta"
                app:layout_constraintStart_toStartOf="@id/tarjeta"
                app:layout_constraintEnd_toEndOf="@+id/tarjeta"
                app:layout_constraintVertical_bias="0.8"
                app:layout_constraintHorizontal_bias="0.1"
                android:text="Marcador" />

            <Button
                android:id="@+id/botonIniciarEscena"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reproducir"
                app:layout_constraintVertical_bias="0.8"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tituloEscena"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>